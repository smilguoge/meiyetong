/**app.wxss**/
page{
  background: #f2f2f2;
  color: #333;
  font-size: 30rpx;
}
.bgWhite{
  background: white;
}
.mb24{
  margin-bottom: 24rpx;
}
.ml24{
  margin-left: 24rpx;
}
.p24{
  padding: 24rpx;
}
.orangeColor{
  color: #fd3d71;
}
.grayColor{
  color: #999;
  font-size: 28rpx;
}
.blueColor{
  color: #4fd2c2;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
image{
  height: auto;
  vertical-align: middle;
}
button{
  border: none;
  outline: none;
}
.flex{
  display: flex;
  display: -webkit-flex;
  display: -moz-flex;
  align-items: center;
  
}
.flexcell{
  flex: 1;
  -webkit-flex: 1;
  -moz-flex: 1;
}
.justify-flex{
  display: flex;
  display: -webkit-flex;
  display: -moz-flex;
  align-items: center;
  justify-content: space-between;
}
.tc{
  text-align: center;
}
.tr{
  text-align: right;
}
.tl{
  text-align: left;
}
.nextBtn{
  text-align: center;
  background: #fd3d71;
  color: white;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 30
}
.rightArrow{
  position: relative;
}
.rightArrow::after{
  position: absolute;
    top: 50%;
    right: 16rpx;
    width: 12rpx;
    height: 12rpx;
    border-top: 2rpx solid #999;
    border-right: 2rpx solid #999;
    content: '';
    -webkit-transform: translateY(-50%) rotate(45deg);
    transform: translateY(-50%) rotate(45deg);
    -ms-transform: translateY(-50%) rotate(45deg);
}
/* 遮罩层样式 */
.shadow{
  position: fixed;
  top: 0; bottom: 0;
  left: 0; right: 0;
  z-index: 66;
  background: rgba(0, 0, 0, 0.5);
}