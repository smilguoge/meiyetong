/* componets/dialogTem.wxss */
/* 弹窗样式 */
.dialog-root{
    position: fixed;
    z-index: 20;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    font-size: 30rpx;
}
/* 遮挡层样式 */
.dialog-face{
    position: fixed;
    background: #000;
    height: 100%;
    width: 100%;
    z-index: 10;
    top: 0;
    left: 0;
    opacity: 0.5;
}
/* 弹窗容器 */
.dialog-wrapper{
    background: white;
    width: 484rpx;
    overflow: hidden;
    -webkit-border-radius: 20rpx;
    -moz-border-radius: 20rpx;
    border-radius: 20rpx;
    padding-bottom: 28rpx;
}
/* 弹窗标题 */
.dialog-header{
    height: 75rpx;
    line-height: 75rpx;
    background: #fd3d71;
    text-align: center;
    color: white;
}

/* 弹窗内容 */
.dialog-content{
    font-weight: 300;
    font-size: 30rpx;
    color: rgb(51, 51, 51);
    padding: 28rpx;
    margin: 0;
}
.content-item{
  display: flex;
  display: -webkit-flex;
  display: -moz-flex;
  margin-bottom: 28rpx;
}
.content-item text{
  width: 30%;
  text-align:justify;
}
.content-item view{
  width: 68%;
}
.content-item text::after{
  content: '';
  padding-left: 100%;
  display: inline-block;
}
.dialog-footer{
  text-align: center;
}
.dialog-footer button{
  background: #fd3d71;
  color: white;
  width: 280rpx;
  height: 58rpx;
  line-height: 58rpx;
  font-size: 30rpx;
}