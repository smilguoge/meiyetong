

@import '../../template/canvas.wxss';     /* canvas生成图片模板 */

page{
  padding-bottom: 98rpx;
}
.m-imgShow {
  width: 100%;
  position: relative;
  min-height: 112rpx;
}
.collage-img{
  width: 100%;
}
.m-count {
  width: 94%;
  height: 100rpx;
  /* line-height: 100rpx; */
  background: #FFF0EE;
  color: black;
  font-size: 30rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 0 24rpx;
}
.m-count .m-countLeft {
  display: inline-block;
}
.m-count .m-countLeft p{
  font-size:34rpx;
  color:#FF0404;
  display:inline-block;
  margin-top:33rpx;

}
.m-count .m-countLeft rich-text{
  font-size:50rpx;
  color:#FF0404;
  display:inline-block;
  vertical-align:top;
  margin-top:16rpx;

}
.m-count .m-countLeft span{
  font-size:25rpx;
  color:#919191;
  display:inline-block;
  vertical-align:top;
  margin:40rpx 15rpx;
  text-decoration:line-through;
}

.m-count .m-countRight {
  color:black;
  font-size:29rpx;
  text-align:center;
  display:inline-block;
  float: right;
  margin-top:35rpx;
}
.m-countRight rich-text {
  display:inline-block;
  color:white;
  padding:1rpx 6rpx;
  border-radius:6px;
  background: -webkit-linear-gradient(#F55E3E, #F78A35) !important;
}
.m-title{
  font-size: 34rpx;
  padding: 24rpx;
  padding-bottom: 0;
}
.m-price{
  justify-content: space-between;
  font-size: 24rpx;
  color: #999999;
  padding: 24rpx;
  display: inline-block;
  right: 0;
}
.m-price.right{
  float:right;
  padding:0;
  margin:-38rpx 20rpx;

}
.m-price text:first-child{
  color: #fd3d71;
  font-size: 36rpx;
}
.collageNum{
  padding: 24rpx;
  font-size: 26rpx;
  color: #333333;
  position: relative;
}
.rightArrow{
  color: #999;
  font-size: 26rpx;
  padding-right: 30rpx;
  text-align: right;
  position: absolute;
  right: 0;
}
.collage-userImg{
  width: 82rpx;
  height: 82rpx;
  border-radius: 100%;
  margin-right: 20rpx;
}
.collageItem{
  justify-content: space-between;
  padding: 24rpx;
  color: #333;
  border-top: 2rpx solid #f2f2f2;
}
.pinTime{
  font-size: 20rpx;
  text-align: right;
}
.collageName{
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  align-items: flex-start;
  width: 28%;
}

/* 商品详情 */
.collage-detal{
  background:white;
  padding:24rpx;
  width:94%;
  height:100%;
}
.detailTit{
  border-left: 4rpx solid #4fd2c2;
  padding-left: 24rpx;
}
.collageFixed{
  position: fixed;
  bottom: 0;
  left: 0; right: 0;
  z-index: 33;
  color: white;
  text-align: center;
  display: flex;
  display: -webkit-flex;
  display: -moz-flex;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.buyAlone{
  flex: 1;
  background: #4fd2c2;
}
.buyTogether{
  flex:1;
  background: #fe9903;
}

.m-bugNum{
  flex:1;
  color: #333;
  background: white;
}
.m-bugNum text{
  width: 160rpx;
  text-align: center;
  font-size: 38rpx;
}

/* 单独购买 */
.buySelf-con{
  padding: 40rpx 0;
  text-align: center;
  font-size: 38rpx;
}
.buyCon{
  color: #fd3d71;
  font-size: 30rpx;
  margin-top: 24rpx;
}
.wxParse-p,.wxParse-img {
  width: 100% !important;
}