/* pages/projectDetail/template/spec/spec.wxss */
@import '../../../../app.wxss';
/* 遮罩层样式 */
.shadow{
  position: fixed;
  top: 0; bottom: 0;
  left: 0; right: 0;
  z-index: 66;
  background: rgba(0, 0, 0, 0.5);
}
.m-spec{
  position: fixed;
  z-index: 68;
  bottom: 0;
  left: 0; right: 0;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  padding: 24rpx;
  font-size: 30rpx;
}
.m-close{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  z-index: 70;
  color: #999;
  border: 2rpx solid #999;
  border-radius: 100%;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 30rpx;
}
.m-specBox{
  display: flex;
}
.m-specBox image{
  width: 160rpx;
  height: 160rpx;
}
.m-specCont{
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  height: 160rpx;
  flex-direction: column;
  justify-content: space-between;
}

.m-specOption{
  flex-wrap: wrap;
  margin-top: 24rpx;
}
.m-specOption view{
  border: 2rpx solid #f0f0f0;
  border-radius: 20rpx;
  width: 30%;
  text-align: center;
  background: #fafafa;
  height: 48rpx;
  line-height: 48rpx;
  margin-right: 2%;
  font-size: 24rpx;
  margin-bottom: 24rpx;
}
.m-specOption view.active{
  background: #4fd2c2;
  color: white;
}
.m-specOption view:nth-child(3n){
  margin-right: 0;
}

.m-buyBox{
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 80rpx;
  text-align: center;
  color: white;
  overflow: hidden;
  font-size: 30rpx;
  margin: 40rpx auto;
  width: 80%;
}
.m-cart{
  flex: 1;
  background: #4fd2c2;
}
.m-buy{
  flex:1;
  background: #fe9903;
}

.m-specitem{
  max-height: 30vh;
  overflow-y: scroll;
}