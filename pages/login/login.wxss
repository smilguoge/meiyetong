/* pages/login/login.wxss */
@import "../../app.wxss";
.m-topimg{
  width: 100%;
}
.m-txt{
  border: 1rpx solid #f2f2f2;
  border-left: none;
  border-right: none;
  padding: 20rpx;
  line-height: 60rpx;
}
.m-txt view{
  width: 120rpx;
}
.m-txt view.picker{
  width: 270rpx;
}
.m-txt button{
  font-size: 24rpx;
  background: none;
  color: #4fd2c2;
  border: 1rpx solid #4fd2c2;
}
.m-loginbtn{
  width: 80%;
  margin: 40rpx auto;
  background: #4fd2c2;
  color: white;
  border-color: #4fd2c2;
}