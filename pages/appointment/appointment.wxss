/* pages/appointment/appointment.wxss */
@import "../../components/noAuthorize/noAuthorize.wxss";
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100%;
  z-index: 9999;
  background: rgba(0, 0, 0, 0.5);
  color: white;
}
.userinfo button{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  background: none;
}
.boxWidth{
  width: 620rpx;
  margin: 0 auto;
}
.appointView{
  background: white;
  margin-bottom: 20rpx;
  padding: 20rpx 0;
}
.appoiImg{
  width: 620rpx;
  height: 348rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}
.appointBtn{
  text-align: right;
}
.appointBtn button{
  display: inline-block;
  border-radius: 80rpx;
  color: white;
  background: #fd3d71;
  height: 44rpx;
  width: 183rpx;
  line-height: 44rpx;
  font-size: 30rpx;
}
.txtBordertop{
  border-top: 2rpx dashed #f2f2f2;
  font-size: 30rpx;
  padding-top: 20rpx;
  color: rgb(51, 51, 51);
  margin-top: 20rpx;
}
.callIcon{
  width: 48rpx;
  margin-left: 20rpx;
}
.appointAddr{
  margin-top: 20rpx;
  color: rgb(102, 102, 102);
  text-align: left;
}
.appointAddr image{
  width: 30rpx;
  margin-right: 24rpx;
}