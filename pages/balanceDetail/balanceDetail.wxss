/* pages/balanceDetail/balanceDetail.wxss */
.discount-bg{
  background: #ffde69;
}
.course-bg{
  background: #ff87af;
}
.product-bg{
  background: #99caff;
}
.nopay-bg{
  background: #ce87ff;
}

.m-cardItem{
  border-radius: 20rpx;
  color: white;
  font-size: 26rpx;
  padding: 26rpx;
  margin-bottom: 24rpx;
  line-height: 60rpx;
  position: relative;
  overflow: hidden;
  /* height: 220rpx; */
}
.autoHeight{
  height: auto;
}

.m-cardItem image{
  position: absolute;
  right: 10rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 0;
  width: 30%;
}
.m-cardTitle{
  font-size: 28rpx;
}
.m-cardItem .justify-flex{
  border-bottom: 2rpx dashed white;
}
.m-cardItem .justify-flex:last-child{
  border-bottom: none;
}
.m-cardItem .card-line{
  height: 65rpx;
  overflow: hidden;
}

.m-cardItem .card-line.autoHeight{
  height: auto;
}
.m-cardItem .card-line .l-item{
  padding-left: 5%;
}
.m-cardItem .card-line .l-type{
  display: inline-block;
}
.m-cardItem .card-line .l-num{
  float: right;
}
.noData{
  text-align: center
}
.noData image{
  width: 200rpx;
  height: 200rpx;
  margin-top:200rpx;

}