/* pages/jifenMall/jifenMall.wxss */
.m-mallTop{
  text-align: center;
  color: white;
  position: relative;
}
.m-mallTop rich-text{
  font-size: 50rpx;
  margin-bottom: 30rpx;
}
.m-mallTop image{
  width: 100%;
}
.m-mallTop view{
  position: absolute;
  top: 16%;
  left: 0;
  width: 100%;
  z-index: 1;
}
.m-jifenlist{
  flex-wrap: wrap;
}
.m-jifenlist jifenItem{
  width: 48%;
  margin-right: 3%;
  margin-bottom: 24rpx;
}
.m-jifenlist jifenItem:nth-child(2n) {
  margin-right: 0;
}