/* pages/mine/myRecommend/myRecommend.wxss */
@import "../../../app.wxss";
.m-spec{
  position: fixed;
  z-index: 68;
  bottom: 0;
  left: 0; right: 0;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  padding: 24rpx;
  font-size: 30rpx;
}
.m-close{
  position: absolute;
  top: -120rpx;
  right: 20rpx;
  z-index: 70;
  color: #fff;
  border: 2rpx solid #fff;
  border-radius: 100%;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 30rpx;
}
.m-title{
  text-align: center;
  border-bottom: 2rpx solid #f2f2f2;
  font-size: 32rpx;
  padding-bottom: 24rpx;
}

.gray{
  color: #666;
}
.m-recommendList{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.m-tablecell{
  flex:1;
  text-align: center;
  padding: 20rpx;
}
.m-tablecell image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
}

.m-recommendbox{
  max-height: 60vh;
  overflow-y: scroll;
}